{
  "markdown.validate.enabled": false,
  "markdown.suggest.paths.enabled": false,
  "markdown.experimental.validate.enabled": false,
  "files.associations": {
    "*.qmd": "quarto"
  },
  "quarto.render.previewType": "external",
  "editor.largeFileOptimizations": true,
  "editor.maxFileSize": 200,
  "extensions.autoUpdate": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "search.useIgnoreFiles": true,
  "files.exclude": {
    "**/*.html": true,
    "**/*_files/": true,
    "**/*.knit.md": true
  },
  // Prevent Air formatter from touching Quarto files
  "air.excludeFiles": ["**/*.qmd"],
  "[quarto]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.defaultFormatter": null
  },
  // Disable all formatting during file operations that might trigger during preview
  "editor.formatOnSaveMode": "file",
  "files.autoSave": "off"
}